<div class="container" id="create-section">
    <div class="row space-top">
        <div class="col-md-12">
            <h1>Create New Furniture</h1>
            <p>Please fill all fields.</p>
        </div>
    </div>
    <form id="create-form" >
        <div class="row space-top" onchange="checkInput(event)">
            <div class="col-md-4">

                <div class="form-group">
                    <label class="form-control-label" for="new-make">Make</label>
                    <input class="form-control" id="new-make" type="text" name="make">
                    <div id="makeInvalidNotification" class="form-control-feedback" style="display: none;">Make must be
                        at least 4 characters long!</div>
                </div>

                <div class="form-group has-success">
                    <label class="form-control-label" for="new-model">Model</label>
                    <input class="form-control" id="new-model" type="text" name="model">
                    <div id="modelInvalidNotification" class="form-control-feedback" style="display: none;">Model must
                        be at least 4 characters long!</div>
                </div>

                <div class="form-group has-danger">
                    <label class="form-control-label" for="new-year">Year</label>
                    <input class="form-control" id="new-year" type="number" name="year">
                    <div id="yearInvalidNotification" class="form-control-feedback" style="display: none;">Year must be
                        between 1950 and 2050!</div>
                </div>

                <div class="form-group">
                    <label class="form-control-label" for="new-description">Description</label>
                    <input class="form-control" id="new-description" type="text"
                        name="description">
                    <div id="descriptionInvalidNotification" class="form-control-feedback" style="display: none;">
                        Description must be more than 10 characters long!</div>
                </div>

            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="form-control-label" for="new-price">Price</label>
                    <input class="form-control" id="new-price" type="number" name="price">
                    <div id="priceInvalidNotification" class="form-control-feedback" style="display: none;">
                        Price must be a positive number!</div>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="new-image">Image</label>
                    <input class="form-control" id="new-image" type="text" name="image">
                    <div id="imageInvalidNotification" class="form-control-feedback" style="display: none;">
                        You must include a picture!</div>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="new-material">Material (optional)</label>
                    <input class="form-control" id="new-material" type="text" name="material">
                    <div id="materialInvalidNotification" class="form-control-feedback" style="display: none;"></div>
                </div>
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </div>
    </form>
</div>